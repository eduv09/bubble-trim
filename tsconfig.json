{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "lib": ["DOM", "ES6"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "allowJs": false,
        "checkJs": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
